<root>
    <BehaviorTree>
        <Sequence name="MainSequence">
            <MoveToPosition target_x="0.0" target_y="2.0" target_z="0"/>
            <CheckReached/> <!-- Check if reached the target -->
            <CheckHP/>
            <Fallback name="CheckHealthFallback">
                <Sequence name="LowHealthSequence">
                    <CheckHP/>
                    <MoveToPosition target_x="0.0" target_y="2.0" target_z="-2.0"/>
                    <Wait duration="5"/>
                    <MoveToPosition target_x="1.5" target_y="0.0" target_z="0"/>
                </Sequence>
                <AlwaysRunning/> 
            </Fallback>
        </Sequence>
    </BehaviorTree>
</root>
